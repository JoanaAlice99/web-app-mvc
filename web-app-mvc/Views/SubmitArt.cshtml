@model IEnumerable<ArtigosModel>

<form asp-controller="ArtigoController" asp-action="SubmitArt" method="post" enctype="multipart/form-data">
    <input type="file" name="file">
    <br/>
    <button type="submit">Upload Excel File</button>
</form>

@if (Model.Count() > 0)
{
    <table>
        <tr>
            <td>Id</td>
            <td>Descrição</td>
            <td>Quantidade</td>
        </tr>
        @foreach (ArtigosModel artigo in Model)
        {
            <tr>
                <td>@artigo.Id</td>
                <td>@artigo.Descricao</td>
                <td>@artigo.Quantidade</td>
            </tr>
        }
    </table>
}